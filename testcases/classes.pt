# Demonstração de classes em Pitão

classe Animal:
    """Classe base para animais."""
    
    def __init__(self, nome):
        self.nome = nome
    
    def falar(self):
        passe
    
    def apresentar(self):
        print(f"Eu sou {self.nome}")

classe Cachorro(Animal):
    """Um cachorro que late."""
    
    def falar(self):
        print(f"{self.nome} diz: Au au!")

classe Gato(Animal):
    """Um gato que mia."""
    
    def falar(self):
        print(f"{self.nome} diz: Miau!")

classe Calculadora:
    """Uma calculadora simples."""
    
    def __init__(self):
        self.resultado = 0
    
    def somar(self, a, b):
        self.resultado = a + b
        retorne self.resultado
    
    def subtrair(self, a, b):
        self.resultado = a - b
        retorne self.resultado
    
    def multiplicar(self, a, b):
        self.resultado = a * b
        retorne self.resultado
    
    def dividir(self, a, b):
        se b == 0:
            levante ValueError("Divisão por zero!")
        self.resultado = a / b
        retorne self.resultado

se __name__ == "__main__":
    print("=== Animais ===")
    rex = Cachorro("Rex")
    mimi = Gato("Mimi")
    
    para animal em [rex, mimi]:
        animal.apresentar()
        animal.falar()
    
    print("\n=== Calculadora ===")
    calc = Calculadora()
    print(f"10 + 5 = {calc.somar(10, 5)}")
    print(f"10 - 5 = {calc.subtrair(10, 5)}")
    print(f"10 * 5 = {calc.multiplicar(10, 5)}")
    print(f"10 / 5 = {calc.dividir(10, 5)}")
    
    print("\n=== Tratamento de Exceção ===")
    tente:
        calc.dividir(10, 0)
    exceto ValueError como erro:
        print(f"Erro capturado: {erro}")
    finalmente:
        print("Operação finalizada")

